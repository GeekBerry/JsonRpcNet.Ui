{
    "info": {
        "description": "Api for JsonRpc chat",
        "version": "v1",
        "title": "Chat API",
        "contact": {
            "name": "",
            "email": "test@test.com",
            "url": ""
        },
        "jsonRpcApiEndpoint": "/jsonrpc"
    },
    "services": [
        {
            "name": "ChatService",
            "path": "/chat",
            "description": "Chat hub",
            "methods": [
                {
                    "name": "SendMessage",
                    "description": "Sends a message to the chat",
                    "returns": "Void",
                    "parameters": [
                        {
                            "name": "message",
                            "type": "String"
                        }
                    ]
                },
                {
                    "name": "SendMessageEcho",
                    "description": "Sends a message to the chat and get and echo back",
                    "returns": "String",
                    "parameters": [
                        {
                            "name": "message",
                            "type": "String"
                        }
                    ]
                },
                {
                    "name": "AddUser",
                    "description": "Add a user to the chat",
                    "returns": "Void",
                    "parameters": [
                        {
                            "name": "request",
                            "type": {
                                "$ref": "#definitions/request"
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "definitions": {
        "request": {
            "type": "object",
            "properties": {
                "Id": {
                    "type": "string"
                },
                "Name": {
                    "type": "string"
                },
                "TimeStamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "UserType": {
                    "type": "string",
                    "enum": [
                        "Admin",
                        "NonAdmin"
                    ]
                }
            },
            "required": [
                "Id",
                "Name",
                "TimeStamp",
                "UserType"
            ]
        }
    }
}